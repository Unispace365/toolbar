<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simple Greeting" Height="200" Width="300">
    <StackPanel Margin="10">
        <TextBox x:Name="inputText" Width="200" Height="23" Margin="5"/>
        <Button Content="Greet" Width="100" Height="30" Margin="5" Click="OnGreetButtonClick"/>
        <TextBlock x:Name="outputText" Margin="5"/>
    </StackPanel>
</Window>