<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Grid Numbering Explanation" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Explanation Text -->
        <TextBlock Grid.Row="0" Margin="10" TextWrapping="Wrap" FontSize="14">
            This window explains the grid numbering strategy used to renumber views on a sheet.
            The grid is divided into 6 columns and 5 rows, and each cell has a unique number.
            The numbering starts from the top right corner and follows a specific pattern.
        </TextBlock>
        
        <!-- Image Display -->
        <Image x:Name="gridImage" Grid.Row="1" Margin="10" Stretch="Uniform"/>
        
        <!-- OK Button -->
        <Button x:Name="okButton" Grid.Row="2" Margin="10" Width="80" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Content="OK" Click="OnOkButtonClick"/>
    </Grid>
</Window>